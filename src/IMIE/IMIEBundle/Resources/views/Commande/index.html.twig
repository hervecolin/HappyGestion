{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Commande list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numerocommande</th>
                <th>Datecommande</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('commande_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.numeroCommande }}</td>
                <td>{% if entity.dateCommande %}{{ entity.dateCommande|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('commande_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('commande_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                    <li>
                        <a href="{{ path('commande_ajout_ligne_commande', { 'id': entity.id }) }}">Ligne</a>
                    </li>					
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('commande_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
