{%extends "::layout.html.twig"%}

{%block body%}
	<div class="container w60 m20 ">
		<form method="post" class="well teal">
		     <legend>Saisie Article </legend>
			<div class="row">
				<div class="col-md-3">
					{{form_label(form.code,'Code:')}}
				</div>
				<div class="col-md-9">
					{{form_widget(form.code,{'attr':{'class':'form-control input-xs','placeholder':'Votre code'}})}}
				</div>
			</div>
			<div class="row">
				<div class="col-md-3">			
					{{form_label(form.designation,'Designation:')}}
				</div>
				<div class="col-md-9">				
					{{form_widget(form.designation,{'attr':{'class':'form-control'}})}}
				</div>	
			</div>	
			<div class="row">
				<div class="col-md-3">				
					{{form_label(form.prixUnitaire,'Prix unitaire:')}}
				</div>
				<div class="col-md-9">				
					{{form_widget(form.prixUnitaire,{'attr':{'class':'form-control w30'}})}}
				</div>
			</div>
			<div class="row">
				<div class="col-md-3">				
					{{form_label(form.categorie,'Categorie:')}}
				</div>
				<div class="col-md-9">				
					{{form_widget(form.categorie,{'attr':{'class':'form-control'}})}}
				</div>
			</div>
			<div class="row">
				<div class="col-md-3">				
					Code barre
				</div>
				<div class="col-md-9">				
					<input type="text" name="codebarre" />
				</div>
			</div>			
			<br/>
			{{form_rest(form)}}
			<div class="row">
				<div class="col-md-12">
					<a href="{{path('imie_list_article')}}" class="btn btn-danger pull-left" >Annuler</a>
					<input type="submit" value="Valider" class="btn btn-primary pull-right" />
				</div>
			</div>
		</form>
	</div>
{%endblock%}
